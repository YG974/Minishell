NAME		= minishell

CC			= clang

C_FLAGS		= -Wall -Wextra -Werror

SRC 		= minishell \

FILES 		= $(addsuffix .c, $(SRC))

OBJ			= $(FILES:.c=.o)

%.o: %.c
	$(CC) $(C_FLAGS) -c $< -o $@

FT		= ./libft/
FT_LIB	= $(addprefix $(FT),libft.a)
INCLUDES	= ./includes/

all: $(NAME)
	$(CC) $(C_FLAGS) -o ${NAME} ${OBJ} -L ${FT_LIB}

$(NAME): $(OBJ)
$(FT_LIB):
	make -C $(FT)

clean:
	rm -f $(OBJ)
	rm -f main.o

fclean: clean
	rm -f $(NAME)
	rm -f test

re: fclean all

test: $(NAME)
	$(CC) $(C_FLAGS) -c main.c
	$(CC) $(C_FLAGS) main.o $(NAME) -o test
	./test

.PHONY:            all clean fclean re test

